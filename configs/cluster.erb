port: 4222
monitor_port: 8222
server_name: $NAME
client_advertise: $ADVERTISE

cluster {
  port: 6222

  routes = [
    <%- (1..@cluster_members).each do |node| -%>
    nats-route://nc<%= node %>:6222
    <%- end -%>
  ]
}

leafnodes {
  port: 7422
}

gateway {
  name: $GATEWAY
  port: 7222

  gateways: [
    <%- (1..@clusters).each do |cluster| -%>
    {
      name: "c<%= cluster %>"
      urls: [
        <%- (1..@cluster_members).each do |node| -%>
          "nats://nc<%= node %>.c<%= cluster %>.<%= @domain %>:7222"
        <%- end -%>
      ]
    }
    <%- end -%>
  ]
}

<%- if @jetstream -%>
jetstream {
  store_dir: /jetstream
}
<%- end -%>

<%- if @password -%>
accounts {
  one: {
<%- if @jetstream -%>
    jetstream: enabled
<%- end -%>
    users = [
      {user: one, password: <%= @password %>}
    ]
    imports = [
      {service: {account: weather, subject: service.weather.requests.>}, to: service.weather.>, share: true}
    ]
    exports = [
      { stream: exports.stream }
    ]
  }

  two: {
<%- if @jetstream -%>
    jetstream: enabled
<%- end -%>
    users = [
      {user: two, password: <%= @password %>}
    ]
    imports = [
      {service: {account: weather, subject: service.weather.requests.>}, to: service.weather.>}
    ]
    exports = [
      { stream: exports.stream }
    ]
  }

  weather: {
<%- if @jetstream -%>
    jetstream: enabled
<%- end -%>
    users = [
      {user: weather, password: <%= @password %>}
    ]
    exports = [
      {
        service: service.weather.requests.>
        accounts: [one, two]
        latency: {
          sampling: 100%
          subject: service.weather.latency
        }
      }
    ]
  }

  system: {
    users = [
      {user: system, password: <%= @password %>}
    ]
    imports = [
      { stream: { account: one, subject: exports.stream }, prefix: imports.one }
      { stream: { account: two, subject: exports.stream }, prefix: imports.two }
    ]
  }
}

system_account: system
<%- end -%>
